# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
WEBSOCKET_PORT=8081

# Database Configuration
# SQLite example:
# DATABASE_URL=sqlite:mr_robot_console.db
# PostgreSQL example:
# DATABASE_URL=postgresql://user:password@localhost:5432/mr_robot_console
# MySQL example:
# DATABASE_URL=mysql://user:password@localhost:3306/mr_robot_console

# Grok/LLM Configuration
GROK_API_KEY=your-api-key-here
GROK_API_URL=https://api.x.ai/v1
GROK_MODEL=grok-beta
GROK_MAX_TOKENS=2048
GROK_TEMPERATURE=0.7

# STT (Speech-to-Text) Configuration
STT_PROVIDER=whisper
# STT_API_URL=https://api.openai.com/v1/audio/transcriptions
# STT_API_KEY=your-stt-api-key

# TTS (Text-to-Speech) Configuration
TTS_PROVIDER=openai
# TTS_API_URL=https://api.openai.com/v1/audio/speech
# TTS_API_KEY=your-tts-api-key
TTS_VOICE=alloy

# Storage Configuration
STORAGE_BASE_PATH=./storage
# STORAGE_FIRMWARE_PATH=./storage/firmware
# STORAGE_ASSETS_PATH=./storage/assets
# STORAGE_UPLOADS_PATH=./storage/uploads

# Security Configuration
JWT_SECRET=change-me-to-secure-random-string
HMAC_KEY=change-me-to-secure-random-string

# MQTT Configuration (optional, requires mqtt feature)
# MQTT_ENABLED=false
# MQTT_BROKER=localhost:1883
# MQTT_CLIENT_ID=mediarise-robot-console
